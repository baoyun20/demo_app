<h1>Listing micropsots</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @micropsots.each do |micropsot| %>
      <tr>
        <td><%= micropsot.content %></td>
        <td><%= micropsot.user_id %></td>
        <td><%= link_to 'Show', micropsot %></td>
        <td><%= link_to 'Edit', edit_micropsot_path(micropsot) %></td>
        <td><%= link_to 'Destroy', micropsot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropsot', new_micropsot_path %>
